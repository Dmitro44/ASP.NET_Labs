@model ListFormViewModel

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<body>
<main class="container">
    <h1>@ViewData["LabTitle"]</h1>
    <h2>Список</h2>
    <ol type="A">
        @for (int i = 0; i < 5; ++i)
        {
            <li>элемент @(i+1) списка</li>
        }
    </ol>
    <hr>
    <h2>Форма</h2>
    <form action="" method="post">
        
        <div class="col-sm-10 offset-sm-2">
            
            <select class="form-select" name="SelDemo" asp-items="Model.List"></select>
            
            <div class="d-flex gap-3">
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="Radio1" name="Radios" value="option1" checked>
                    <label for="Radio1" class="form-check-label">
                        Радио-1
                    </label>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="Radio2" name="Radios" value="option2">
                    <label for="Radio2" class="form-check-label">
                        Радио-2
                    </label>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="Radio3" name="Radios" value="option3">
                    <label for="Radio3" class="form-check-label">
                        Радио-3
                    </label>
                </div>
            </div>
        </div>
        
        <div class="row mb-3">
            <label for="inputEmail" class="col-sm-2 col-form-label">Логин:</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword" class="col-sm-2 col-form-label">Пароль:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword">
            </div>
        </div>

        <button id="" type="submit" class="btn btn-primary">Отправить</button>
        
    </form>
</main>
</body>
</html>

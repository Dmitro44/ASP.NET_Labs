@page "/authentication/{action}"
@using WEB_Lab13.UI.Pages

@switch (Action?.ToLowerInvariant())
{
    case "register":
        <Register />
        break;
    case "login":
        <Login />
        break;
    case "logout":
        <Logout /> 
        break;
    default:
        <Login /> 
        break;
}

@code{
    [Parameter] public string? Action { get; set; }
}
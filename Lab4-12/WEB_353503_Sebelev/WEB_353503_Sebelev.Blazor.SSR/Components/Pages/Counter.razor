@page "/counter"
@page "/counter/{InitialCount:int}"
@using System.ComponentModel.DataAnnotations
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<hr>

<EditForm Model="model" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    
    <InputNumber @bind-Value="model.Count"/>
    <button class="btn btn-secondary" type="submit">Установить</button>
</EditForm>

@code {

    public class CounterModel
    {
        [Range(1, 10, ErrorMessage = "Число должно быть от 1 до 10")]
        public int Count { get; set; }
    }
    
    [Parameter]
    public int? InitialCount { get; set; }

    private CounterModel model = new() { Count = 1 };
    private int currentCount;

    protected override void OnParametersSet()
    {
        if (InitialCount.HasValue)
        {
            currentCount = InitialCount.Value;
        }
    }

    private void OnValidSubmit()
    {
        currentCount = model.Count;
    }

    private void IncrementCount()
    {
        currentCount++;
    }
}

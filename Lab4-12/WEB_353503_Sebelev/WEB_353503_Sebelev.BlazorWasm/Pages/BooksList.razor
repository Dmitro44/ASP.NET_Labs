@inject IDataService DataService
@implements IDisposable

@if (DataService.Books.Items is null)
{
    <div class="alert alert-info" role="alert">
        <p>Книги не загружены</p>
    </div>   
}
else
{
    <table>
        <th>Name</th>
        <th>Description</th>
            @foreach (var item in DataService.Books.Items)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><button class="btn btn-info" @onclick="() => DetailsClicked(item.Id)">Подробнее</button></td>
                </tr>
            }
    </table>
}

@code {
    [Parameter]
    public EventCallback<int> BookSelected { get; set; }
    
    protected override void OnInitialized()
    {
        DataService.DataLoaded += StateHasChanged;
    }

    private async Task DetailsClicked(int selectedId)
    {
        await BookSelected.InvokeAsync(selectedId);
    }

    public void Dispose()
    {
        DataService.DataLoaded -= StateHasChanged;
    }
}
@page
@model WEB_353503_Sebelev.UI.Areas.Admin.Pages.IndexModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="./CreatePage" class="mt-2 btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Books.Items[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Books.Items[0].Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Books.Items[0].Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Books.Items[0].Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Books.Items[0].Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Books.Items[0].Image)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Books.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.Image" style="width: auto; height: 300px;" alt="Book @item.Id">
            </td>
            <td>
                <a asp-page="./UpdatePage" class="btn btn-success" asp-route-id="@item.Id">Edit</a>
                <a asp-page="./DetailsPage" class="btn btn-info" asp-route-id="@item.Id">Details</a>
                <a asp-page="./DeletePage" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<pager current-page="@Model.Books.CurrentPage"
       total-pages="@Model.Books.TotalPages"
       admin="true">
</pager>

</body>
</html>

@model CartViewModel 

@{
    ViewData["Title"] = "Корзина";
}

<h2 class="mt-3 mb-4">Ваша корзина:</h2>

@if (Model.Items.Any())
{
    <div class="list-group">
        @foreach (var item in Model.Items)
        {
            <div class="list-group-item list-group-item-action d-flex align-items-center mb-2 p-3 border rounded">
                
                <!-- Изображение товара -->
                <div class="me-4">
                    <img src="@item.Image" alt="@item.Title" class="img-thumbnail" style="width: 150px; height: auto; object-fit: cover;"/>
                </div>

                <!-- Информация о товаре -->
                <div class="flex-grow-1">
                    <h5 class="mb-1">@item.Title</h5>
                    <p class="mb-1 text-muted">@item.Description</p>
                </div>

                <!-- Количество -->
                <div class="mx-4">
                    <span class="fs-5">@item.Count</span>
                </div>

                <!-- Кнопка удаления -->
                <div>
                    <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.BookId" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </div>
        }
    </div>

    <hr />

    <div class="d-flex justify-content-end align-items-center">
        <h4 class="me-4">
            Итого: <span class="text-primary">@Model.TotalAmount.ToString("N2") руб</span>
        </h4>
        <a href="#" class="btn btn-success btn-lg">Оформить заказ</a>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        Ваша корзина пуста.
    </div>
}